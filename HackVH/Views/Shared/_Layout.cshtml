<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @await RenderSectionAsync("Meta", required: false)
    <title>@ViewData["Title"] - HackVH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/index.min.css"/>
    <link rel="stylesheet" href="~/css/untitled.css">
</head>
<body>
<nav class="navbar navbar-light navbar-expand-sm fixed-top" data-aos="fade-down" data-aos-duration="500" data-aos-delay="150" id="mainNav" style="width: 100%;height: 80px;color: rgb(33, 37, 41);border-bottom-width: 0px;">
    <div class="container-fluid"><a class="navbar-brand js-scroll-trigger" href="#page-top" style="color: rgb(255,255,255);"><img data-bss-hover-animate="pulse" style="width: 200px;height: 30px;" src="~/img/3.png"></a><button data-toggle="collapse" data-target="#navbarResponsive" class="navbar-toggler navbar-toggler-right" type="button" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" style="padding-bottom: 4px;"><i class="fa fa-align-justify"></i></button>
        <div class="collapse navbar-collapse text-monospace" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" data-bss-hover-animate="pulse" href="#about" style="color: #000000;">About</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" data-bss-hover-animate="pulse" href="#services" style="color: #000000;">Services</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" data-bss-hover-animate="pulse" href="#contact" style="color: #000000;">Contact</a></li>
                <partial name="_LoginNavPartial" model="User"/>
            </ul>
        </div>
    </div>
    </nav>
    @{
        var result = TempData["Result"];
        if (result != null)
        {
            <partial name="_ResultPartial" model="result"/>
        }
    }
<main role="main" style="margin-top:100px;min-height: 1000px">
        @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <section id="contact mb-0 pb-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 text-center mx-auto">
                    <h2 class="section-heading">Let's talk soon!</h2>
                    <hr class="my-4">
                    <p class="mb-5">Ready to start learning with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center ml-auto"><i class="fa fa-phone fa-3x mb-3 sr-contact" data-aos="zoom-in" data-aos-duration="300" data-aos-once="true"></i>
                    <p>123-456-6789</p>
                </div>
                <div class="col-lg-4 text-center mr-auto"><i class="fa fa-envelope-o fa-3x mb-3 sr-contact" data-aos="zoom-in" data-aos-duration="300" data-aos-delay="300" data-aos-once="true"></i>
                    <p><a href="mailto:your-email@your-domain.com">DeviateAcademy@gmail.com</a></p>
                </div>
            </div>
        </div>
    </section>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>