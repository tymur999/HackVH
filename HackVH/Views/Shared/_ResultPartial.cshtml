@using System.Text.Json
@using HackVH.Models.ViewModels
@model string
@{
    var result = JsonSerializer.Deserialize<ResultViewModel>(Model);
}

<style>
    #result {
    width: 100%;
    height: 50px;
    margin-bottom: 20px;
    position: absolute;
    top: 0;
    left: 0;
    @{ var color = result!.Succeeded ? "green" : "yellow"; }
    justify-content: center;
    align-items: center;
    background-color: @color;
}
</style>
<div id="result" class="d-flex text-black-50">
    @result.Response
</div>

