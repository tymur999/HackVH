@using HackVH.Data
@model VideoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Video.Name"></label>
        <input asp-for="Video.Name">
        <span asp-validation-for="Video.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video.VideoUrl"></label>
        <input asp-for="Video.VideoUrl">
        <span asp-validation-for="Video.VideoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create video</button>
    </div>
    <div class="form-group">
        <div asp-validation-summary="All"></div>
    </div>
</form>
